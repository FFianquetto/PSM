<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".RecipeDetailActivity">

    <!-- Header con botÃ³n de regreso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/primary_blue">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detalles de la Receta"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/natasans"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Imagen de la receta -->
            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/light_gray"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_no_recipes"
                android:contentDescription="Imagen de la receta" />

            <!-- TÃ­tulo de la receta -->
            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo de la Receta"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- InformaciÃ³n del autor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Por: "
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:fontFamily="@font/natasans" />

                <TextView
                    android:id="@+id/recipeAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Autor"
                    android:textColor="@color/primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans" />
            </LinearLayout>

            <!-- Estado y fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/recipeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publicada"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/natasans"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/vibrant_orange"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/recipeDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha de creaciÃ³n"
                    android:textColor="@color/medium_gray"
                    android:textSize="14sp"
                    android:fontFamily="@font/natasans"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- SecciÃ³n de ingredientes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredientes"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/recipeIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista de ingredientes"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/natasans"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/light_gray"
                android:padding="16dp" />

            <!-- SecciÃ³n de pasos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasos de PreparaciÃ³n"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/recipeSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasos de preparaciÃ³n"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/natasans"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/light_gray"
                android:padding="16dp" />

            <!-- InformaciÃ³n adicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Tiempo de cocciÃ³n -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â°"
                        android:textSize="24sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/recipeCookingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 min"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/natasans" />
                </LinearLayout>

                <!-- Porciones -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ½ï¸"
                        android:textSize="24sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/recipeServings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 porciÃ³n"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/natasans" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
