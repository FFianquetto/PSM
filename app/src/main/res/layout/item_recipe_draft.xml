<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@android:color/white"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/recipeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo del borrador"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/natasans"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recipeDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actualizado"
            android:textColor="@color/medium_gray"
            android:textSize="14sp"
            android:fontFamily="@font/natasans"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/recipeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrador"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/natasans"
            android:textStyle="bold"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/medium_gray"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/natasans"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_accent"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp" />

        <Button
            android:id="@+id/publishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicar"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/natasans"
            android:textStyle="bold"
            android:backgroundTint="@color/vibrant_orange"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp" />
    </LinearLayout>

</LinearLayout>

