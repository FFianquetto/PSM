<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Header con logo -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <!-- Logo en esquina superior izquierda con fondo blanco -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter"
                android:contentDescription="logo" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Botón de filtro -->
        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filtros"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Barra de búsqueda centrada -->
    <LinearLayout
        android:id="@+id/searchBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#20000000"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="0dp">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Buscar receta..."
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/natasans"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:padding="0dp"
                android:gravity="center_vertical" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_search"
                android:contentDescription="Buscar"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Indicador de carga para búsqueda -->
    <ProgressBar
        android:id="@+id/searchProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:indeterminateTint="@color/primary_blue" />

    <!-- Mensaje cuando no hay resultados -->
    <TextView
        android:id="@+id/searchEmptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchProgressBar"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:text="No se encontraron publicaciones con ese término de búsqueda."
        android:textColor="@color/medium_gray"
        android:textSize="16sp"
        android:fontFamily="@font/natasans"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#1A000000"
        android:padding="12dp"
        android:visibility="gone" />

    <!-- Saludo al usuario -->
    <LinearLayout
        android:id="@+id/userGreetingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEmptyText"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Hola, "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/natasans" />

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textColor="@color/primary_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/natasans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/natasans" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/userEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@email.com"
            android:textColor="@color/medium_gray"
            android:textSize="12sp"
            android:fontFamily="@font/natasans" />
    </LinearLayout>

    <!-- Lista de recetas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/userGreetingLayout"
        android:layout_above="@id/bottomNavigationLayout"
        android:padding="24dp"
        android:clipToPadding="false"
        android:visibility="visible" />

    <!-- Indicador de carga para el feed principal -->
    <ProgressBar
        android:id="@+id/feedProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/primary_blue"
        android:visibility="gone" />

    <!-- Navbar en el footer -->
    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <!-- Inicio (activo) -->
        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Inicio"
                app:tint="@color/vibrant_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="@color/vibrant_orange"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Crear publicación -->
        <LinearLayout
            android:id="@+id/createButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Crear"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Perfil"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>