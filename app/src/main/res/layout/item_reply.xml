<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/light_gray"
    android:padding="12dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="1dp">

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/replyUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Usuario"
        android:textColor="@color/primary_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/natasans"
        android:layout_marginBottom="4dp"/>

    <!-- Texto de la respuesta -->
    <TextView
        android:id="@+id/replyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto de la respuesta"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/natasans"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="8dp"/>

    <!-- Fecha y botones de like/dislike -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <!-- Fecha de la respuesta -->
        <TextView
            android:id="@+id/replyDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha"
            android:textColor="@color/medium_gray"
            android:textSize="11sp"
            android:fontFamily="@font/natasans"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"/>

        <!-- Botones de like/dislike -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botón Like -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/replyLikeButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_thumb_up"
                    android:contentDescription="Like"
                    android:tint="@color/medium_gray"/>

                <TextView
                    android:id="@+id/replyLikesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="11sp"
                    android:textColor="@color/medium_gray"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/natasans"/>
            </LinearLayout>

            <!-- Botón Dislike -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/replyDislikeButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_thumb_down"
                    android:contentDescription="Dislike"
                    android:tint="@color/medium_gray"/>

                <TextView
                    android:id="@+id/replyDislikesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="11sp"
                    android:textColor="@color/medium_gray"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/natasans"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
