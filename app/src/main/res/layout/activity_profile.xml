<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_blue"
    tools:context=".ProfileActivity">

    <!-- Header con logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:contentDescription="logo"/>
    </LinearLayout>

    <!-- Contenido del perfil -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@android:color/white"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Avatar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/profileAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:src="@android:drawable/ic_menu_camera"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    android:contentDescription="Avatar del usuario"/>
            </LinearLayout>

            <!-- Información del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre completo"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textViewFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Juan Pérez"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="juan@ejemplo.com"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"/>

                <!-- Alias -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alias"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textViewAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@juanperez"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"/>

                <!-- Teléfono (si existe) -->
                <TextView
                    android:id="@+id/labelPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+52 81 1234 5678"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:visibility="gone"/>

                <!-- Dirección (si existe) -->
                <TextView
                    android:id="@+id/labelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Av. Universidad 123, Monterrey, NL"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="24dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Perfil"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/vibrant_orange"
                    android:fontFamily="@font/natasans"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerrar Sesión"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bright_blue"
                    android:fontFamily="@font/natasans"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:padding="16dp"/>

            </LinearLayout>

            <!-- Sección de Recetas Publicadas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recetas publicadas"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/publishedRecipesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recipe_simple"/>

                <TextView
                    android:id="@+id/noPublishedRecipesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aún no has publicado recetas"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:fontFamily="@font/natasans"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Sección de Borradores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Borradores"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/draftRecipesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recipe_simple"/>

                <TextView
                    android:id="@+id/noDraftRecipesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No tienes recetas en borrador"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:fontFamily="@font/natasans"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Sección de Publicaciones Guardadas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publicaciones favoritas"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"/>

                <!-- Barra de búsqueda para favoritos -->
                <LinearLayout
                    android:id="@+id/favoritesSearchBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="16dp">

                    <android.widget.EditText
                        android:id="@+id/favoritesSearchEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Buscar por título, autor o fecha..."
                        android:textColorHint="@color/medium_gray"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/natasans"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:padding="8dp"
                        android:gravity="center_vertical" />

                    <ImageButton
                        android:id="@+id/favoritesSearchButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_search"
                        android:contentDescription="Buscar favoritos"
                        app:tint="@color/primary_blue" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/likedRecipesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recipe_simple"/>

                <TextView
                    android:id="@+id/noLikedRecipesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No has guardado ninguna publicación aún"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:fontFamily="@font/natasans"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Navbar en el footer -->
    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:gravity="center">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Inicio"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Crear publicación -->
        <LinearLayout
            android:id="@+id/createButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Crear"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Perfil (activo) -->
        <LinearLayout
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Perfil"
                app:tint="@color/vibrant_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/vibrant_orange"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>