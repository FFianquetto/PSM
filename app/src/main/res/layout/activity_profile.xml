<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_blue"
    tools:context=".ProfileActivity">

    <!-- Header con logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:contentDescription="logo"/>
    </LinearLayout>

    <!-- Contenido del perfil -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@android:color/white"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/natasans"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Avatar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/profileAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:src="@android:drawable/ic_menu_camera"
                    android:scaleType="centerInside"
                    android:padding="16dp"
                    android:contentDescription="Avatar del usuario"/>
            </LinearLayout>

            <!-- Información del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre completo"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textViewFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Juan Pérez"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="juan@ejemplo.com"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"/>

                <!-- Alias -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alias"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textViewAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@juanperez"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"/>

                <!-- Teléfono (si existe) -->
                <TextView
                    android:id="@+id/labelPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+52 81 1234 5678"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:visibility="gone"/>

                <!-- Dirección (si existe) -->
                <TextView
                    android:id="@+id/labelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Av. Universidad 123, Monterrey, NL"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="24dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/light_gray"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Perfil"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/vibrant_orange"
                    android:fontFamily="@font/natasans"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerrar Sesión"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bright_blue"
                    android:fontFamily="@font/natasans"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:padding="16dp"/>

            </LinearLayout>

            <!-- Sección de Mis Recetas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis Recetas"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/natasans"
                    android:layout_marginBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/userRecipesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recipe_simple"/>

                <TextView
                    android:id="@+id/noRecipesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No tienes recetas publicadas aún"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:fontFamily="@font/natasans"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>